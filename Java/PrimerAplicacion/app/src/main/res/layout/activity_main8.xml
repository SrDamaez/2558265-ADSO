<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity8"
    android:padding="25dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pregunta #8"
        android:textSize="55sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción:"
        android:textSize="30sp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Qué significa JSON en términos de programación?"
        android:textSize="20sp"
        android:gravity="left"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_marginTop="10sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opciones:"
        android:textSize="30sp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RadioButton
            android:id="@+id/radioJavaScriptObjectNotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="JavaScript Object Notation" />

        <RadioButton
            android:id="@+id/radioJavaSymbolicObjectNotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Java Symbolic Object Notation" />

        <RadioButton
            android:id="@+id/radioJavaScriptOrientedNotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="JavaScript Oriented Notation" />

        <RadioButton
            android:id="@+id/radioJavaSerializedObjectNotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Java Serialized Object Notation" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_responder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Responder"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:onClick="registrarPersona"
        />

</androidx.appcompat.widget.LinearLayoutCompat>