<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#D4CAE6"
    android:layout_margin="0dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7194C7"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/titulo_pokemon"

            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPokemones"
            android:layout_width="match_parent"
            android:layout_height="625dp"
            android:layout_marginTop="15dp"
            android:background="#9AB2D7">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/anterior"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bordes_rectos"
            android:text="ANTERIOR"
            app:backgroundTint="#3466AF" />

        <Button
            android:id="@+id/siguiente"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bordes_rectos"

            android:text="SIGUIENTE"


            app:backgroundTint="#3466AF" />


    </LinearLayout>

    <ImageView
        android:id="@+id/loadingGif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/loading_pokeball"
        android:visibility="gone" />

</FrameLayout>